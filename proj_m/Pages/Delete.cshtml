@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Post";
}

<h2>Delete Post</h2>
@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
@if (Model.Post != null)
{
    <div>
        <h4>Are you sure you want to delete this post?</h4>
        <dl>
            <dt>Title</dt>
            <dd>@Model.Post.Title</dd>
            <dt>Author</dt>
            <dd>@Model.Post.Author</dd>
            <dt>Category</dt>
            <dd>@Model.Post.Category?.Name</dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Post.Id" />
            <button type="submit">Delete</button>
            <a asp-page="/Category">Cancel</a>
        </form>
    </div>
}
