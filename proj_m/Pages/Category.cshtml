@page
@model CategoryModel
@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>
<form method="get">
    <label for="locationFilter">Filter by Location:</label>
    <select id="locationFilter" name="location">
        <option value="">All Locations</option>
        @foreach (var loc in Model.AllLocations)
        {
            <option value="@loc" @(loc == Model.SelectedLocation ? "selected" : "")>@loc</option>
        }
    </select>
    <button type="submit">Filter</button>
</form>
<ul>
@foreach (var category in Model.Categories)
{
    <li>
        <strong>@category.Name</strong>
        @if (!string.IsNullOrEmpty(category.Description))
        {
            <span>- @category.Description</span>
        }
        @if (!string.IsNullOrEmpty(category.Location))
        {
            <span> (Location: @category.Location)</span>
        }
    </li>
}
</ul>

<hr />
<h3>Upload an Image</h3>
<form method="post" enctype="multipart/form-data">
    <input type="file" name="ImageFile" />
    <button type="submit">Upload</button>
</form>
@if (!string.IsNullOrEmpty(Model.UploadMessage))
{
    <p>@Model.UploadMessage</p>
    @if (!string.IsNullOrEmpty(Model.UploadedImagePath))
    {
        <img src="@Model.UploadedImagePath" alt="Uploaded Image" style="max-width:200px;" />
    }
}
