@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Find the best electricians, plumbers, maids nearby</p>
</div>

<form method="get">
    <div class="input-group mb-3">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search posts..." value="@Request.Query["searchTerm"]" />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

@if (Model.LatestPosts != null && Model.LatestPosts.Count > 0)
{
    <h2>Search Results</h2>
    <ul>
    @foreach (var post in Model.LatestPosts)
    {
        <li>
            <strong>@post.Title</strong> by @post.Author<br />
            <em>Published:</em> @post.PublishedDate.ToShortDateString()<br />
            <em>Summary:</em> @post.Summary
        </li>
    }
    </ul>
}
else
{
    <p>No posts found.</p>
}

